#!/bash/bin
echo "Enter  the number to addition"
read num1 num2	 		#To read the value of num1 and num2
sum=`echo $num1 + $num2 | bc`	#expr does work for floating point arithmentic so bc command and piping is done
echo "Answer is $sum" 		#To print the answer


